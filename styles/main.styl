// ******************************
// Global
// ******************************
*
    margin: 0
    padding: 0

body
    font-size 1rem

.container
    max-width: 700px;

h2
    margin-bottom: 20px
    font-size 1.2em

label
    font-size 0.8em

.row
    margin 0

// ******************************
// Wallpaper
// ******************************
.wallpaper-container
    position fixed
    top 0
    width 100%
    height 100vh

// ******************************
// Main Interface
// ******************************
.ui-container
    margin-top 50px

.ui-container .row .col-3
    padding-left 0
    padding-right 15px

.ui-container .row .col-9
    padding-left 15px

// ******************************
// Configuration panel
// ******************************
.form-group
    width 100%
    margin-bottom 0

input::placeholder
    font-size 0.8em

.form-check-input
    float right

.footer .btn
    margin-right: 5px
    font-size 0.8em

// ******************************
// Code panel
// ******************************

.code-container .row
    margin-top: 10px
    margin-bottom: 10px

.code-configuration .dropdown
    margin-right: 5px !important

.dropdown-toggle
    font-size 0.8em

textarea
    width 100%

textarea::placeholder
    font-size 0.8em
