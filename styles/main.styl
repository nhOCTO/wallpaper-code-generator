// ******************************
// Global
// ******************************
*
    margin: 0
    padding: 0

body
    font-size 1rem

.container
    max-width: 700px;

h2
    font-size 1.2em

label
    margin-bottom: 2px
    font-size 0.8em

.alert
    font-size 0.8em

.row
    margin 0

// ******************************
// Wallpaper
// ******************************
.wallpaper-container
    z-index -1
    position fixed
    top 0
    width 100%
    height 100vh
    transition: 0.2s ease
    opacity 0.3

pre
    font-size 16px
    width inherit
    height inherit

.hljs
    height max-content
    overflow hidden
    white-space pre-wrap

span.spaceDot
    font-size 1em
    vertical-align top
    opacity 0.4
    mix-blend-mode difference

// ******************************
// Main Interface
// ******************************
.ui-container
    position absolute
    left 0
    right 0
    padding 20px
    margin-top 50px
    background-color #f5f5f5
    border 1px solid #cccccc
    border-radius: 5px
    opacity 1
    transition: 0.2s ease

.ui-container .row .col-3
    padding-left 0
    padding-right 15px

.ui-container .row .col-9
    padding-left 15px

// ******************************
// Configuration panel
// ******************************
.form-group
    width 100%
    margin-bottom 5px

input.form-control
    height 30px
    line-height 30px

input[type="text"]
    font-size 0.9em

input::placeholder
    font-size 0.8em

.form-check-input
    float right

.footer .btn
    margin-right: 5px
    font-size 0.8em

// ******************************
// Code panel
// ******************************
.code-container .row
    margin-bottom 5px

.code-container .row .dropdown
    margin-right 5px !important

.dropdown-toggle
    font-size 0.8em

.dropdown-menu
    height 200px
    overflow-y scroll

.text-styles div 
    margin-right 5px
    padding-right 5px
    padding-left 5px

.text-styles i.fas
    margin-right 5px
    padding 5px
    border-radius 2px
    cursor pointer
    font-size 0.9em

.text-styles div i.fas
    margin-right 5px
    padding 5px
    border-radius 2px
    cursor pointer
    font-size 0.9em

.text-styles i.fas.active
    border-bottom 3px solid white

textarea.form-control
    margin-top: 5px
    margin-bottom: 5px
    width 100%
    font-size 0.8em

textarea.form-control::placeholder
    font-size 1em
